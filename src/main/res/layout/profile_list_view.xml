<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp" >

        <Button
            android:id="@+id/btnSelectPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Photo" />

    </LinearLayout>

<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="8px">

    <TextView
        android:id="@+id/text1"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Name:"
        />
    <TextView
        android:id="@+id/firstName"
        android:layout_marginLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/text1"
        />

    <TextView
        android:id="@+id/lastName"
        android:layout_marginLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/firstName"/>

    <TextView
        android:id="@+id/text2"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Title:"
        android:layout_below="@id/text1"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/text2"
        android:layout_below="@id/firstName"/>

    <TextView
        android:id="@+id/text3"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Department:"
        android:layout_below="@id/text2"/>

    <TextView
        android:id="@+id/department"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/text3"
        android:layout_below="@id/title"/>

    <TextView
        android:id="@+id/text4"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="City:"
        android:layout_below="@id/text3"/>

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/text4"
        android:layout_below="@id/department"/>

    <TextView
        android:id="@+id/text5"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Office number:"
        android:layout_below="@id/text4"/>

    <TextView
        android:id="@+id/office"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/text5"
        android:layout_below="@id/city"/>

    <TextView
        android:id="@+id/text6"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Cell phone number:"
        android:layout_below="@id/text5"/>

    <TextView
        android:id="@+id/cell"
        android:layout_marginLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/text6"
        android:layout_below="@id/office"/>

    <TextView
        android:id="@+id/text7"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Email:"
        android:layout_below="@id/text6"/>

    <TextView
        android:id="@+id/email"
        android:layout_marginLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/text7"
        android:layout_below="@id/cell"/>

</RelativeLayout>

<ListView
android:id="@android:id/list"
android:layout_width="fill_parent"
android:layout_height="fill_parent"/>

</LinearLayout>